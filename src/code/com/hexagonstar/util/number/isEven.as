package com.hexagonstar.util.number
{
	/**
	 * Checks whether the specified integer is an even or odd number.
	 * 
	 * @param value Integer to check.
	 * @return true if the integer is even (2, 4, 6, 8, etc.) or false
	 *         if the integer is odd (1, 3, 5, 7, etc.).
	 */
	public function isEven(value:int):Boolean
	{
		return (value % 2) == 0;
	}
}
